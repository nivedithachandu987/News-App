    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #ff9999, #800000, #ff4d4d);
            background-size: 400% 400%;
            animation: gradientShift 10s ease infinite;
            display: flex;
            flex-direction: column; /* Use column layout */
            min-height: 100vh; /* Ensure body takes at least full height */
        }

        .content {
            flex: 1; /* Allow content to grow and fill space */
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding-top: 100px;
        }

        .payment-card {
            width: 100%;
            max-width: 300px;
            background: linear-gradient(135deg, #ff4d4d, #800000, #ff9999);
            color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            padding: 15px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .payment-card:hover {
            transform: scale(1.03);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

        .payment-header {
            font-size: 1rem;
            color: #ffcccc;
            margin-bottom: 10px;
        }

        .pricing-section {
            margin-bottom: 15px;
        }

        .price {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ffe6e6;
            margin-bottom: 8px;
        }

        .plan-type {
            font-size: 0.9rem;
            color: #ffcccc;
        }

        .payment-methods {
            display: flex;
            justify-content: space-between;
            margin: 15px 0;
        }

        .payment-method {
            width: 48%;
            padding: 8px;
            background: linear-gradient(135deg, #ff9999, #b83232);
            border-radius: 6px;
            text-align: center;
            cursor: pointer;
            color: #fff;
            transition: all 0.3s ease;
        }

        .payment-method:hover {
            background: linear-gradient(135deg, #b83232, #ff4d4d);
        }

        .payment-method i {
            font-size: 1.5rem;
            color: #fff;
        }

        .checkout-btn {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, #ff4d4d, #800000);
            color: #fff;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .checkout-btn:hover {
            background: linear-gradient(135deg, #800000, #b81824);
        }

        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        @media (max-width: 600px) {
            .payment-card {
                padding: 12px;
                max-width: 85%;
            }

            .payment-methods {
                flex-direction: column;
                align-items: center;
            }

            .payment-method {
