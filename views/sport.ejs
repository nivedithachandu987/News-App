.card-title {
  margin: 0; /* Remove any default margin */
  font-size: 2rem; /* Adjust font size */
  font-weight: bold;
  color: #333;
}

/* New Card below the Title */
.card-content {
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 20px;
  max-width: 80%;
