  font-size: 1rem;
  line-height: 1.6;
}

/* Card Grid Structure */
.card-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 20px;
  padding: 20px;
  margin: 0 auto;
  max-width: 1200px;
}

/* Individual Card Style */
.card-content {
  background: linear-gradient(145deg, #ffffff, #f1f1f1);
  border: none;
  border-radius: 15px;
  padding: 20px;
  overflow: hidden;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2), -5px -5px 10px rgba(255, 255, 255, 0.5);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  text-align: center;
}

.card-content:hover {
  transform: translateY(-10px);
  box-shadow: 8px 8px 20px rgba(0, 0, 0, 0.3), -8px -8px 20px rgba(255, 255, 255, 0.6);
}

/* Image Styling */
.card-image {
  width: 100%;
  max-height: 100px;
  border-radius: 10px;
  margin-bottom: 15px;
  object-fit: cover;
}

/* Card Title */
.card-content h2 a {
  color: #333;
  font-size: 1.5rem;
  font-weight: bold;
  text-decoration: none;
  transition: color 0.3s ease;
}

.card-content h2 a:hover {
  color: #007BFF;
}

/* Card Description */
.card-content p {
  color: #555;
  font-size: 1rem;
  line-height: 1.5;
  margin-top: 10px;
}


.search-container {
