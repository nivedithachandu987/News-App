<!DOCTYPE html>  
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dynamic Subscription Form</title>
  <link rel="stylesheet" href="/styles/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
      * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #ff9999, #800000, #ff4d4d); /* Background gradient */
            background-size: 400% 400%;
            animation: gradientShift 10s ease infinite;
            display: flex;
            flex-direction: column; /* Stack elements vertically */
            min-height: 100vh; /* Ensure body takes full height */
        }

        header {
            padding: 20px 0; /* Add padding to the header for spacing */
            width: 100%; /* Ensure header takes full width */
            background: rgba(255, 255, 255, 0.8); /* Optional: Add a background to the header */
            position: relative; /* Position relative for stacking context */
            z-index: 10; /* Ensure header is above other elements */
        }

        .subscribe-container {
    background: #f89393; /* Soft white card */
    padding: 20px; /* Increased padding for better spacing */
    border-radius: 6px; /* Slightly smaller border radius */
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    max-width: 240px; /* Smaller width */
    width: 85%; /* Responsive width */
    text-align: center;
    transition: background 0.3s ease; /* Smooth transition for background color */
    margin: 100px auto; /* Center the container and push it down further */
    flex-grow: 1; /* Allow the container to grow and fill space */
}
        .subscribe-container:hover {
            background: linear-gradient(to bottom right, #ffd1d1, #ff6b6b, #762626, #f5a3a3, #ff4d4d); /* Multi-color gradient on hover */
        }

        .subscribe-container h2 {
            margin-bottom: 8px;
            font-size: 1rem; /* Smaller title font size */
            color: #762626; /* Rich maroon for title */
            font-weight: bold;
            text-transform: capitalize;
        }

        .subscribe-container p {
            margin-bottom: 10px;
            font-size: 0.8rem; /* Smaller description font size */
            color: #2d2e2e; /* Subtle gray for description */
        }

        .subscribe-container input,
        .subscribe-container select {
            width: 100%;
            padding: 6px; /* Reduced padding for inputs */
            margin-bottom: 8px;
            border: 1px solid #d3b8b8; /* Soft border */
            border-radius: 4px;
            font-size: 0.8rem; /* Smaller font size for inputs */
        }

    

        .subscribe-btn:hover {
            background: linear-gradient(to bottom right, #ff6666, #762626); /* Multi-color gradient on hover */
            transform: scale(1.05); /* Slight scale up effect */
        }

        /* General Footer Styles */
        footer {
            background-color: #222;
            color: #fff;
            padding: 20px;
            font-family: Arial, sans-serif;
            width: 100%; /* Set footer width to 100% */
            margin-top: auto; /* Push footer to the bottom */
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }

        /* Logo Container */
        .scrolling-logo {
            overflow: hidden;
            position: relative;
            height: 50px;
            margin-bottom: 20px;
            flex-grow: 1;
            text-align: center;
        }

        .logo-link {
            font-size: 25px;
            font-weight: bold;
            color: maroon;
            text-decoration: none;
            display: inline-block;
            white-space: nowrap;
            position: absolute;
            animation: bounceLeftRight 5s ease-in-out infinite;
            transition: color 0.3s ease;
            border: 2px solid #fff;
            padding: 5px;
            border-radius: 10px;
            color: #bd1515;
        }

        /* Bouncing animation for logo */
        @keyframes bounceLeftRight {
            0% { left: 0; }
            25% { left: 30%; }
            50% { left: 70%; }
            75% { left: 30%; }
            100% { left: 0; }
        }

        /* Navigation Links */
        .footer-links {
            margin-bottom: 20px;
        }

        .footer-link-list {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        .footer-link-item {
            color: #fff;
            text-decoration: none;
            font-size: 14px;
        }

        .footer-link-item:hover {
            color: #c01414;
        }

        /* Social Media Icons */
        .social-media-section {
            margin-bottom: 20px;
        }

        .social-media-list {
            list-style: none;
            display: flex;
            justify-content: center;
            gap: 15px;
            padding: 0;
        }

        .social-icon-link {
            color: #fff;
            font-size: 20px;
            text-decoration: none;
        }

        .social-icon-link:hover {
            color: #9f2020;
        }

        /* Additional Links and Copyright */
        .footer-bottom {
            margin-top: 20px;
        }

        .footer-bottom-links {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 10px;
        }

        .bottom-link-item {
            color: #fff;
            text-decoration: none;
            font-size: 14px;
        }

        .bottom-link-item:hover {
            color: #a70909;
        }

        .footer-copyright {
            font-size: 12px;
            color: #bbb;
            margin: 0;
        }

        /* Media Queries for Responsiveness */
        @media screen and (max-width: 768px) {
            .subscribe-container {
                margin-top: 60px; /* Adjusted margin to push it down further */
                max-width: 90%; /* Allow more width on smaller screens */
            }

            .footer-link-list, .social-media-list, .footer-bottom-links {
                flex-direction: column;
                align-items: center;
                gap: 10px;
            }

            .footer-link-item, .social-icon-link, .bottom-link-item {
                font-size: 12px;
            }

            .footer-copyright {
                font-size: 10px;
            }
        }

        @media screen and (max-width: 480px) {
            .subscribe-container {
                margin-top: 80px; /* Further increased margin for mobile */
                max-width: 95%; /* Allow even more width on very small screens */
            }

            .footer-link-item, .social-icon-link, .bottom-link-item {
                font-size: 10px;
            }

            .footer-copyright {
                font-size: 8px;
            }
        }

        /* Gradient Animation */
        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="date" id="current-date"></div>
        <div class="user-actions">
            <div class="login-link-container">
                <a href ="/login_signup" class="login-btn">
                    <i class="fas fa-user icon"></i> Login
                </a>
            </div>
            <a href="/FreeTrial" class="free-trial">Free Trial</a>
            <a href="/subscription" class="btn subscribe">Subscribe</a>
            <button class="hamburger" onclick="toggleMenu()" aria-label="Open menu" aria-expanded="false">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </button>
        </div>
        <div class="logo-container">
            <a href="/" class="logo">
                <i class="fas fa-capsules icon"></i> Daily Dose
            </a>
        </div>
        <nav class="nav-menu">
            <ul>
                <a href="/" class="nav-link">
                    <i class="fas fa-search search-icon"></i>
                  </a>
                <li><a href="/" class="nav-link">Home</a></li>
                <li><a href="/india" class="nav-link">India</a></li>
                <li><a href="/world" class="nav-link">World</a></li>
                <li><a href="/movies" class="nav-link">Movies</a></li>
                <li><a href="/sport" class="nav-link">Sport</a></li>
                <li><a href="/data" class="nav-link">Data</a></li>
                <li><a href="/health" class="nav-link">Health</a></li>
                <li><a href="/opinion" class="nav-link">Opinion</a></li>
                <li><a href="/sci-tech" class="nav-link">Sci-Tech</a></li>
                <li><a href="/premium" class="nav-link active"><span class="circle">P</span> Premium</a></li>
            </ul>
        </nav>
    </header>

    <div class="subscribe-container">
        <h2>Subscribe</h2>
        <p>Stay updated with the latest news.</p>
        <form id="subscribeForm">
            <input type="text" name="name" placeholder="Full Name" required aria-label="Full Name">
            <input type="email" name="email" placeholder="Email Address" required aria-label="Email Address">
            
            <select name="preferences" required aria-label="Select Your Preferences">
                <option value="">Select Preferences</option>
                <option value="daily">Daily Updates</option>
                <option value="weekly">Weekly Newsletter</option>
                <option value="breaking-news">Breaking News Alerts</option>
            </select>

            <div class="pricing-section">
                <label for="plan">Select Plan:</label>
                <select name="plan" id="plan" required>
                    <option value="free">Free Trial (7 days)</option>
                    <option value="1999">₹1999 per month</option>
                    <option value="19999">₹19,999 per year</option>
                </select>
            </div>

            <button type="submit" class="subscribe-btn"> Subscribe</button>
        </form>
    </div>

    <footer>
      <!-- Logo Container with Animation -->
      <div class="scrolling-logo">
         <a href="/" class="logo-link">
            <i class="fas fa-capsules logo-icon"></i>
            Daily Dose
         </a>
      </div>
    
      <div class="footer-content">
         <!-- Navigation Links -->
         <nav class="footer-links">
            <ul class="footer-link-list">
               <li><a href="/" class="footer-link-item">Home</a></li>
               <li><a href="/india" class="footer-link-item">India</a></li>
               <li><a href="/world" class="footer-link-item">World</a></li>
               <li><a href="/movies" class="footer-link-item">Movies</a></li>
               <li><a href="/sport" class="footer-link-item">Sport</a></li>
               <li><a href="/data" class="footer-link-item">Data</a></li>
               <li><a href="/health" class="footer-link-item">Health</a></li>
               <li><a href="/opinion" class="footer-link-item">Opinion</a></li>
               <li><a href="/sci-tech" class="footer-link-item">Sci-Tech</a></li>
               <li><a href="/premium" class="footer-link-item">Premium</a></li>
            </ul>
         </nav>
    
         <!-- Social Media Icons -->
         <div class="social-media-section">
            <ul class="social-media-list">
               <li><a href="https://www.facebook.com" target="_blank" class="social-icon-link"><i class="fab fa-facebook-f"></i></a></li>
               <li><a href="https://www.twitter.com" target="_blank" class="social-icon-link"><i class="fab fa-twitter"></i></a></li>
               <li><a href="https://www.instagram.com" target="_blank" class="social-icon-link"><i class="fab fa-instagram"></i></a></li>
               <li><a href="https://www.linkedin.com" target="_blank" class="social-icon-link"><i class="fab fa-linkedin-in"></i></a></li>
               <li><a href="https://www.youtube.com" target="_blank" class="social-icon-link"><i class="fab fa-youtube"></i></a></li>
               <li><a href="https://www.telegram.org" target="_blank" class="social-icon-link"><i class="fab fa-telegram-plane"></i></a></li>
               <li><a href="https://www.spotify.com" target="_blank" class="social-icon-link"><i class="fab fa-spotify"></i></a></li>
            </ul>
         </div>
    
         <!-- Additional Links and Copyright -->
         <div class="footer-bottom">
            <ul class="footer-bottom-links">
               <li><a href="/infoCard" class="bottom-link-item">Current Issue</a></li>
               <li><a href="/infoCard" class="bottom-link-item">Terms of Use</a></li>
               <li><a href="/infoCard" class="bottom-link-item">Privacy Policy</a></li>
            </ul>
            <p class="footer-copyright">
               &copy; 2025, THG PUBLISHING PVT LTD. or its affiliated companies. All rights reserved.
            </p>
         </div>
      </div>
    </footer>
    
    
       
    <script>
        document.getElementById('subscribeForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the default form submission

            const name = this.name.value;
            const email = this.email.value;
            const preferences = this.preferences.value;
            const plan = this.plan.value;

            // If user selects a paid plan, proceed to payment
            if (plan === "1999" || plan === "19999") {
                // Redirect to payment page (replace payment-page.html with actual URL)
                window.location.href = "/payment"; // You can customize the payment page URL
            } else {
                // Show a thank you message for free trial
                alert(`Thank you, ${name}!\n\nYou've subscribed to the Free Trial.\nPreferences: ${preferences}\nUpdates will be sent to ${email}.`);
            }

            // Optionally reset the form
            this.reset();
        });
    </script>

    <script src="/js/script.js"></script>
</body>
</html>