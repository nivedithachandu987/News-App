/* Logo Container */
.scrolling-logo {
   overflow: hidden;
   position: relative;
   height: 50px;
   margin-bottom: 20px;
   flex-grow: 1;
   text-align: center;
}

.logo-link {
   font-size: 25px;
   font-weight: bold;
   color: maroon;
   text-decoration: none;
   display: inline-block;
   white-space: nowrap;
   position: absolute;
   animation: bounceLeftRight 5s ease-in-out infinite;
   transition: color 0.3s ease;
   border: 2px solid #fff;
   padding: 5px;
   border-radius: 10px;
   color: #bd1515;
}

/* Bouncing animation for logo */
@keyframes bounceLeftRight {
   0% { left: 0; }
   25% { left: 30%; }
   50% { left: 70%; }
   75% { left: 30%; }
   100% { left: 0; }
}

/* Navigation Links */
.footer-links {
   margin-bottom: 20px;
}

.footer-link-list {
   list-style: none;
   padding: 0;
   display: flex;
   justify-content: center;
   gap: 15px;
}

.footer-link-item {
   color: #fff;
   text-decoration: none;
