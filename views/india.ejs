      "Laapataa Ladies Out Of Oscar Race"
    ];
  
    // Event listener for input in the search bar
    searchBar.addEventListener('input', (e) => {
      const searchTerm = e.target.value.toLowerCase();
      // Display suggestions
      if (searchTerm) {
        suggestionsContainer.style.display = 'block';
        const filteredSuggestions = articleTitles.filter((title) =>
          title.toLowerCase().includes(searchTerm)
        );
        suggestionsContainer.innerHTML = filteredSuggestions
          .map((title) => `<div class="suggestion-item">${title}</div>`)
          .join('');
      } else {
        suggestionsContainer.style.display = 'none';
        suggestionsContainer.innerHTML = '';
      }
  
      // Filter visible articles
      articles.forEach((article) => {
        const titleElement = article.querySelector('h2');
        const titleText = titleElement.textContent.toLowerCase();
        if (titleText.includes(searchTerm)) {
          article.style.display = 'block';
        } else {
          article.style.display = 'none';
        }
      });
    });
  
    // Hide suggestions on click outside
    document.addEventListener('click', (e) => {
      if (!e.target.closest('.search-container')) {
        suggestionsContainer.style.display = 'none';
      }
    });
  
    // Click event for suggestion items
    suggestionsContainer.addEventListener('click', (e) => {
      if (e.target.classList.contains('suggestion-item')) {
        const selectedText = e.target.textContent;
        searchBar.value = selectedText;
        suggestionsContainer.style.display = 'none';
  
        // Filter articles based on selected suggestion
        articles.forEach((article) => {
          const titleElement = article.querySelector('h2');
          const titleText = titleElement.textContent.toLowerCase();
          if (titleText === selectedText.toLowerCase()) {
            article.style.display = 'block';
          } else {
            article.style.display = 'none';
          }
        });
      }
    });
